<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainActivityBtn" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/simple_white</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">10dp</item>
        <item name="iconTint">@color/dark_gray</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="SettingsActivityTv">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginEnd">44dp</item>
        <item name="android:paddingTop">21dp</item>
        <item name="android:paddingBottom">21dp</item>
    </style>

    <style name="SettingsActivityIconColor">
        <item name="android:tint">?attr/colorOnSecondaryContainer</item>
    </style>

    <style name="TrackNameTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TrackArtistAndTimeTextStyle">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnSecondaryContainer</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="PlaceHolderText">
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="SearchActivityRefreshAndClearButton">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="cornerRadius">54dp</item>
    </style>

    <style name="PlayerActivityDetailTextHeading">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/ic_gray</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="PlayerActivityDetailTextDescription">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="AlbumActivityTabLayout" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CreateNewPlaylistButton">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="cornerRadius">54dp</item>
    </style>

    <style name="HeaderStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextInputStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintEnabled">true</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="android:textColorHint">?attr/colorOnSecondary</item>
        <item name="boxStrokeColor">@drawable/edit_text_color_selector</item>
        <item name="hintTextColor">@color/main_blue</item>
        <item name="colorControlActivated">@color/main_blue</item>
    </style>

    <style name="TextInputEditTextStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MaterialAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/PositiveBtnStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeBtnStyle</item>
    </style>

    <style name="PositiveBtnStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/main_blue</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="NegativeBtnStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/main_blue</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="PlaylistAlbumsItemStyle">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="PlayerBottomSheetHeader">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
</resources>